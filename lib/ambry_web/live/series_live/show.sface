<h1 class="text-4xl">{@series.name}</h1>

<p class="mb-4 text-xl text-gray-600">
  by
  {#for author <- @authors}
    <LiveRedirect
      to={Routes.person_show_path(@socket, :show, author.person_id)}
      class="text-lime-500 hover:underline"
    >
      {author.name}
    </LiveRedirect>
    <span class="last:hidden">,</span>
  {/for}
</p>

<BookTiles books={@series.series_books} />
